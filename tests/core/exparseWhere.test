====================================================================================================
# Where

The where directive contains a set of assignments that apply to the expression above.
====================================================================================================
----------------------------------------------------------------------------------------------------

a where {
    a = 1
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Where>
    <Id name="a"/>
    <where>
        <AssignmentExpression op="=">
            <Id name="a"/>
            <Integer value="1"/>
        </AssignmentExpression>
    </where>
</Where>

----------------------------------------------------------------------------------------------------

foo {
    1
} where {
    a = 1
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Where>
    <CallExpression>
        <Id name="foo"/>
        <arg>
            <Integer value="1"/>
        </arg>
    </CallExpression>
    <where>
        <AssignmentExpression op="=">
            <Id name="a"/>
            <Integer value="1"/>
        </AssignmentExpression>
    </where>
</Where>

----------------------------------------------------------------------------------------------------
