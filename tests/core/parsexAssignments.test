====================================================================================================
# Assignments

Basic assignments
====================================================================================================
----------------------------------------------------------------------------------------------------

a = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <Id name="a"/>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

a.b = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <GetExpression name="b">
        <Id name="a"/>
    </GetExpression>
    <Integer value="1"/>
</AssignmentExpression>

====================================================================================================
Incremental assignments.
====================================================================================================
----------------------------------------------------------------------------------------------------

a += 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="+=">
    <Id name="a"/>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

a -= 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="-=">
    <Id name="a"/>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------
# Incremental multiplication

a *= 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="*=">
    <Id name="a"/>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

a /= 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="/=">
    <Id name="a"/>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

a //= 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="%=">
    <Id name="a"/>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

a **= 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="**=">
    <Id name="a"/>
    <Integer value="1"/>
</AssignmentExpression>

====================================================================================================
Unlike regular assignments, incremental assignments apply to any expression.
====================================================================================================
----------------------------------------------------------------------------------------------------

a() += 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="+=">
    <CallExpression>
        <Id name="a"/>
    </CallExpression>
    <Integer value="1"/>
</AssignmentExpression>

====================================================================================================
Key assignments.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo[bar] = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <BinaryExpression op="[]">
        <Id name="foo"/>
        <Id name="bar"/>
    </BinaryExpression>
    <Integer value="1"/>
</AssignmentExpression>

====================================================================================================
Range assignments.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo[bar to baz] = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <BinaryExpression op="[to]">
        <Id name="foo"/>
        <Range>
            <Id name="bar"/>
            <Id name="baz"/>
        </Range>
    </BinaryExpression>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

foo[bar to baz by bags] = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <BinaryExpression op="[to]">
        <Id name="foo"/>
        <Range>
            <Id name="bar"/>
            <Id name="baz"/>
            <Id name="bags"/>
        </Range>
    </BinaryExpression>
    <Integer value="1"/>
</AssignmentExpression>

====================================================================================================
Type declarations in assignments
====================================================================================================
----------------------------------------------------------------------------------------------------

foo: Bar = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <TypeAssignment name="foo">
        <TypeId id="Bar"/>
    </TypeAssignment>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

foo: Bar\T = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <TypeAssignment name="foo">
        <TypeId id="Bar">
            <TypeId id="T"/>
        </TypeId>
    </TypeAssignment>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

foo: Bar\(S\G\V) = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <TypeAssignment name="foo">
        <TypeId id="Bar">
            <TypeId id="S">
                <TypeId id="G"/>
                <TypeId id="V"/>
            </TypeId>
        </TypeId>
    </TypeAssignment>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

foo: Bar\(S\(G\V)) = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <TypeAssignment name="foo">
        <TypeId id="Bar">
            <TypeId id="S">
                <TypeId id="G">
                    <TypeId id="V"/>
                </TypeId>
            </TypeId>
        </TypeId>
    </TypeAssignment>
    <Integer value="1"/>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

foo: [Foo] = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <TypeAssignment name="foo">
        <TypeId id="List">
            <TypeId id="Foo"/>
        </TypeId>
    </TypeAssignment>
    <Integer value="1"/>
</AssignmentExpression>

