====================================================================================================
# Function calls

Basic function calls are included within parentheses.

@calls/basic
====================================================================================================
----------------------------------------------------------------------------------------------------

foo()

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo(a)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <Id name="a"/>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo(a, b)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <Id name="a"/>
    <Id name="b"/>
</CallExpression>

====================================================================================================
Named arguments are indicated with a bullet prefix.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo(•name a)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <arg name="name">
        <Id name="a"/>
    </arg>
</CallExpression>

----------------------------------------------------------------------------------------------------
# External name on second argument

foo(a, •name b)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <Id name="a"/>
    <arg name="name">
        <Id name="b"/>
    </arg>
</CallExpression>

----------------------------------------------------------------------------------------------------
# External name before un-named argument

foo(a, •name b, c)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <Id name="a"/>
    <arg name="name">
        <Id name="b"/>
    </arg>
    <Id name="c"/>
</CallExpression>

====================================================================================================
Anonymous function arguments must put their own arguments in parentheses if more than one.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo(> (a) 1)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <Function>
        <Argument name="a"/>
        <Integer value="1"/>
    </Function>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo(> (a,b) 1)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <Function>
        <Argument name="a"/>
        <Argument name="b"/>
        <Integer value="1"/>
    </Function>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo(> (a,b) 1, c)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <Function>
        <Argument name="a"/>
        <Argument name="b"/>
        <Integer value="1"/>
    </Function>
    <Id name="c"/>
</CallExpression>

----------------------------------------------------------------------------------------------------
