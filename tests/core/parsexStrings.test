====================================================================================================
# Basic quoted strings

Strings are enclosed within double quotation marks. Single quoted strings are treated as individual characters, as you will see later.

@string/basic
====================================================================================================
----------------------------------------------------------------------------------------------------

""

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<String value=""/>

----------------------------------------------------------------------------------------------------

"abc"

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<String value="abc"/>

----------------------------------------------------------------------------------------------------
# Leading and trailing whitespace is preserved, as it obviously should be.

"  abc  "

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<String value="  abc  "/>

----------------------------------------------------------------------------------------------------

foo"bar"

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <String value="bar"/>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo"\\-"

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <String value="\-"/>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo"abc %def"

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <BinaryExpression op="++">
        <String value="abc "/>
        <Id name="def"/>
    </BinaryExpression>
</CallExpression>

----------------------------------------------------------------------------------------------------
