====================================================================================================
----------------------------------------------------------------------------------------------------

foo {
    2
} • {
    3
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <arg>
        <Integer value="2"/>
    </arg>
    <arg>
        <Integer value="3"/>
    </arg>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo {
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo {
    2
} • {
    3
} • {
    4
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <arg>
        <Integer value="2"/>
    </arg>
    <arg>
        <Integer value="3"/>
    </arg>
    <arg>
        <Integer value="4"/>
    </arg>
</CallExpression>

