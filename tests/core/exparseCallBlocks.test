====================================================================================================
Calls nested within calls.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo
    foo
        foo

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <arg>
        <CallExpression>
            <Id name="foo"/>
            <arg>
                <Id name="foo"/>
            </arg>
        </CallExpression>
    </arg>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo •arg1
    foo •arg1
        foo

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <arg name="arg1">
        <CallExpression>
            <Id name="foo"/>
            <arg name="arg1">
                <Id name="foo"/>
            </arg>
        </CallExpression>
    </arg>
</CallExpression>

====================================================================================================
When argument is a right-associative chain, the indented block goes to right-most expression.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo • bar => baz =>
    1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <arg>
        <Function expression="true">
            <head>
                <Id name="bar"/>
            </head>
            <Function expression="true">
                <head>
                    <Id name="baz"/>
                </head>
                <Integer value="1"/>
            </Function>
        </Function>
    </arg>
</CallExpression>

----------------------------------------------------------------------------------------------------

foo
    1
•arg1 bar => baz =>
    1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <arg>
        <Integer value="1"/>
    </arg>
    <arg name="arg1">
        <Function expression="true">
            <head>
                <Id name="bar"/>
            </head>
            <Function expression="true">
                <head>
                    <Id name="baz"/>
                </head>
                <Integer value="1"/>
            </Function>
        </Function>
    </arg>
</CallExpression>

