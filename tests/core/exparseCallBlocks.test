====================================================================================================
A bullet after any expression will call the result of that expression.
====================================================================================================
----------------------------------------------------------------------------------------------------
////////////////////////////////////////////////////////////////////////////////////////////////////

a + b • 3

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <BinaryExpression op="+">
        <Id name="a"/>
        <Id name="b"/>
    </BinaryExpression>
    <arg>
        <Integer value="3"/>
    </arg>
</CallExpression>

----------------------------------------------------------------------------------------------------

a + b • {
    3
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <BinaryExpression op="+">
        <Id name="a"/>
        <Id name="b"/>
    </BinaryExpression>
    <arg>
        <Integer value="3"/>
    </arg>
</CallExpression>

----------------------------------------------------------------------------------------------------

a + b • a =>
    3

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <BinaryExpression op="+">
        <Id name="a"/>
        <Id name="b"/>
    </BinaryExpression>
    <arg>
        <Function expression="true">
            <head>
                <Id name="a"/>
            </head>
            <Integer value="3"/>
        </Function>
    </arg>
</CallExpression>

