====================================================================================================
An expression followed by an indented block is treated as a function call. The block is an argument to the call.
====================================================================================================
----------------------------------------------------------------------------------------------------

iter {
    2
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="iter"/>
    <arg>
        <Integer value="2"/>
    </arg>
</CallExpression>

----------------------------------------------------------------------------------------------------

iter {
    2
    b
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="iter"/>
    <arg>
        <Integer value="2"/>
        <Id name="b"/>
    </arg>
</CallExpression>

====================================================================================================
If the expression already has arguments, the block is appended as another argument.
====================================================================================================
----------------------------------------------------------------------------------------------------

iter() {
    2
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="iter"/>
    <arg>
        <Integer value="2"/>
    </arg>
</CallExpression>

----------------------------------------------------------------------------------------------------

iter(1) {
    2
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="iter"/>
    <arg>
        <Integer value="1"/>
    </arg>
    <arg>
        <Integer value="2"/>
    </arg>
</CallExpression>

====================================================================================================
Only identifiers or calls can be used in this manner.
====================================================================================================
----------------------------------------------------------------------------------------------------

a + b {
    3
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
%nyi

