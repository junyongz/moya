====================================================================================================
Block expressions within a transform.
====================================================================================================
----------------------------------------------------------------------------------------------------

=> if
    a ->
        b =>
            1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Function expression="true">
    <If>
        <Transform>
            <Id name="a"/>
            <Function expression="true">
                <head>
                    <Id name="b"/>
                </head>
                <Integer value="1"/>
            </Function>
        </Transform>
    </If>
</Function>

