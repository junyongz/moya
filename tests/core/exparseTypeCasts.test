====================================================================================================
# Type casting

The "as" operator is used to cast an expression to a different type.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo as Bar

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeId id="Bar"/>
</Cast>

----------------------------------------------------------------------------------------------------

foo as Foo\Bar\Baz

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeId id="Foo">
        <TypeId id="Bar"/>
        <TypeId id="Baz"/>
    </TypeId>
</Cast>

----------------------------------------------------------------------------------------------------

foo as [Foo]

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeId id="List">
        <TypeId id="Foo"/>
    </TypeId>
</Cast>

----------------------------------------------------------------------------------------------------

foo as {| Foo = Bar |}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeId id="Map">
        <TypeId id="Foo"/>
        <TypeId id="Bar"/>
    </TypeId>
</Cast>

----------------------------------------------------------------------------------------------------

foo as <>

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeId id="Channel"/>
</Cast>

----------------------------------------------------------------------------------------------------

foo as <Foo>

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeId id="Channel">
        <TypeId id="Foo"/>
    </TypeId>
</Cast>

----------------------------------------------------------------------------------------------------

foo as >(Foo,Bar):Baz

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeId id="Function">
        <TypeId id="Baz"/>
        <TypeId id="Foo"/>
        <TypeId id="Bar"/>
    </TypeId>
</Cast>

====================================================================================================
Combination of different type declarations.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo as Foo\(Foo\Bar\Baz)\([Foo])\({| Foo = Bar |})\(<Foo>)\(>(Foo): Bar)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeId id="Foo">
        <TypeId id="Foo">
            <TypeId id="Bar"/>
            <TypeId id="Baz"/>
        </TypeId>
        <TypeId id="List">
            <TypeId id="Foo"/>
        </TypeId>
        <TypeId id="Map">
            <TypeId id="Foo"/>
            <TypeId id="Bar"/>
        </TypeId>
        <TypeId id="Channel">
            <TypeId id="Foo"/>
        </TypeId>
        <TypeId id="Function">
            <TypeId id="Bar"/>
            <TypeId id="Foo"/>
        </TypeId>
    </TypeId>
</Cast>

----------------------------------------------------------------------------------------------------
