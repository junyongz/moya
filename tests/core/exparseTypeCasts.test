====================================================================================================
# Type casting

The "as" operator is used to cast an expression to a different type.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo as Bar

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeId id="Bar"/>
</Cast>

----------------------------------------------------------------------------------------------------

foo as Foo\Bar\Baz

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeArguments>
        <TypeId id="Foo"/>
        <TypeId id="Bar"/>
        <TypeId id="Baz"/>
    </TypeArguments>
</Cast>

----------------------------------------------------------------------------------------------------

foo as [Foo]

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeArguments>
        <TypeId id="List"/>
        <TypeId id="Foo"/>
    </TypeArguments>
</Cast>

----------------------------------------------------------------------------------------------------

foo as {| Foo = Bar |}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeArguments>
        <TypeId id="Map"/>
        <TypeId id="Foo"/>
        <TypeId id="Bar"/>
    </TypeArguments>
</Cast>

----------------------------------------------------------------------------------------------------

foo as <>

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeArguments>
        <TypeId id="Channel"/>
    </TypeArguments>
</Cast>

----------------------------------------------------------------------------------------------------

foo as <Foo>

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeArguments>
        <TypeId id="Channel"/>
        <TypeId id="Foo"/>
    </TypeArguments>
</Cast>

----------------------------------------------------------------------------------------------------

foo as >(Foo,Bar):Baz

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeArguments>
        <TypeId id="Function"/>
        <TypeId id="Baz"/>
        <TypeId id="Foo"/>
        <TypeId id="Bar"/>
    </TypeArguments>
</Cast>

====================================================================================================
Combination of different type declarations.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo as Foo\(Foo\Bar\Baz)\([Foo])\({| Foo = Bar |})\(<Foo>)\(>(Foo): Bar)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Cast>
    <Id name="foo"/>
    <TypeArguments>
        <TypeId id="Foo"/>
        <TypeArguments>
            <TypeId id="Foo"/>
            <TypeId id="Bar"/>
            <TypeId id="Baz"/>
        </TypeArguments>
        <TypeArguments>
            <TypeId id="List"/>
            <TypeId id="Foo"/>
        </TypeArguments>
        <TypeArguments>
            <TypeId id="Map"/>
            <TypeId id="Foo"/>
            <TypeId id="Bar"/>
        </TypeArguments>
        <TypeArguments>
            <TypeId id="Channel"/>
            <TypeId id="Foo"/>
        </TypeArguments>
        <TypeArguments>
            <TypeId id="Function"/>
            <TypeId id="Bar"/>
            <TypeId id="Foo"/>
        </TypeArguments>
    </TypeArguments>
</Cast>

----------------------------------------------------------------------------------------------------
