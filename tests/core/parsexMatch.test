====================================================================================================
Block expressions within a transform.
====================================================================================================
----------------------------------------------------------------------------------------------------

=> foo is
    a ->
        b =>
            1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Function expression="true">
    <Is>
        <Id name="foo"/>
        <If>
            <Transform>
                <Id name="a"/>
                <Function expression="true">
                    <head>
                        <Id name="b"/>
                    </head>
                    <Integer value="1"/>
                </Function>
            </Transform>
        </If>
    </Is>
</Function>

