====================================================================================================
In calls.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo(* a -> a)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <arg>
        <Function>
            <Argument name="iterable"/>
            <Block>
                <Iterator>
                    <left>
                        <Id name="a"/>
                    </left>
                    <iterable>
                        <Id name="iterable"/>
                    </iterable>
                    <Id name="a"/>
                </Iterator>
            </Block>
        </Function>
    </arg>
</CallExpression>

