====================================================================================================
# Iterator expressions with where clauses
====================================================================================================
----------------------------------------------------------------------------------------------------

n = * a in b -> c where c = 1

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <Id name="n"/>
    <Block>
        <Iterator>
            <left>
                <Id name="a"/>
            </left>
            <iterable>
                <Id name="b"/>
            </iterable>
            <Id name="c"/>
        </Iterator>
        <where>
            <AssignmentExpression op="=">
                <Id name="c"/>
                <Integer value="1"/>
            </AssignmentExpression>
        </where>
    </Block>
</AssignmentExpression>

