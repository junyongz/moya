n = * a,x if a -> {
    b
} where {
    c = 1
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <Id name="n"/>
    <Function>
        <Argument name="iterable"/>
        <Block>
            <Iterator>
                <left>
                    <Id name="a"/>
                    <Id name="x"/>
                </left>
                <iterable>
                    <Id name="iterable"/>
                </iterable>
                <clause>
                    <Id name="a"/>
                </clause>
                <Block>
                    <Id name="b"/>
                    <where>
                        <AssignmentExpression op="=">
                            <Id name="c"/>
                            <Integer value="1"/>
                        </AssignmentExpression>
                    </where>
                </Block>
            </Iterator>
        </Block>
    </Function>
</AssignmentExpression>

