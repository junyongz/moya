====================================================================================================
In calls.
====================================================================================================
----------------------------------------------------------------------------------------------------

foo(* a -> a)

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<CallExpression>
    <Id name="foo"/>
    <arg>
        <Function>
            <Argument name="iterable"/>
            <Iterator>
                <left>
                    <Id name="a"/>
                </left>
                <iterable>
                    <Id name="iterable"/>
                </iterable>
                <Id name="a"/>
            </Iterator>
        </Function>
    </arg>
</CallExpression>

