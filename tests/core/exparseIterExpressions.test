====================================================================================================
# Iterator expressions
====================================================================================================
----------------------------------------------------------------------------------------------------

n = * a in b -> c

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<AssignmentExpression op="=">
    <Id name="n"/>
    <Iterator>
        <left>
            <Id name="a"/>
        </left>
        <iterable>
            <Id name="b"/>
        </iterable>
        <Id name="c"/>
    </Iterator>
</AssignmentExpression>

----------------------------------------------------------------------------------------------------

