        <Function>
            <Argument name="iterable"/>
            <Iterator>
                <left>
                    <Id name="a"/>
                </left>
                <iterable>
                    <Id name="iterable"/>
                </iterable>
                <clause>
                    <Id name="a"/>
                </clause>
                <Id name="a"/>
            </Iterator>
        </Function>
    </arg>
</CallExpression>

