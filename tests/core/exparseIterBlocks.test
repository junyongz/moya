* a -> {
    c
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Function>
    <Argument name="iterable"/>
    <Iterator>
        <left>
            <Id name="a"/>
        </left>
        <iterable>
            <Id name="iterable"/>
        </iterable>
        <Id name="c"/>
    </Iterator>
</Function>

----------------------------------------------------------------------------------------------------

* a -> {
    c
} where {
    c = 1
}

- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

<Function>
    <Argument name="iterable"/>
    <Iterator>
        <left>
            <Id name="a"/>
        </left>
        <iterable>
            <Id name="iterable"/>
        </iterable>
        <Block>
            <Id name="c"/>
            <where>
                <AssignmentExpression op="=">
                    <Id name="c"/>
                    <Integer value="1"/>
                </AssignmentExpression>
            </where>
        </Block>
    </Iterator>
</Function>

